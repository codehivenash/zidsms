{{!-- START Category Choose --}}
{{partial 'page-student-categories'}}
{{!-- END Category Choose --}}
{{!-- START Student Table --}}
<div class="portlet light">
   <div class="portlet-title">
      <div class="caption">
         <i class="icon-note"></i>
         <span class="caption-subject bold titlecase"> Other Students</span>
         <span class="caption-helper"></span>
      </div>
      <div class="actions">
         {{!-- <a href="javascript:;" class="btn btn-circle btn-default">
         <i class="fa fa-pencil"></i> Edit </a> --}}
         {{#link-to 'students.new' class="btn btn-circle btn-default"}}
         <i class="fa fa-plus"></i> Add {{/link-to}}
         <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title=""> </a>
      </div>
   </div>
   <div class="portlet-body">
      <div class="table-scrollable table-scrollable-borderless">
         <table class="table table-striped table-hover ">
            <thead>
               <tr>
                  <th> ID </th>
                  <th> Full Name </th>
                  <th> Email </th>
                  <th> Mobile Number</th>
                  <th> Class </th>
                  <th> Enrollment Status</th>
                  <th> Actions</th>
               </tr>
            </thead>
            <tbody>
               {{#each model as |student|}}
               <tr>
                  <td> {{student.id}} </td>
                  <td> {{student.firstName}} {{student.lastName}} </td>
                  <td> {{student.email}} </td>
                  <td> {{student.mobileNumber}} </td>
                  <td> 12 </td>
                  <td class="center">
                     <span class="label label-sm label-success"> Enrolled </span>
                  </td>
                  <td>
                     <div class="actions">
                        {{#link-to 'students.show' student class="btn btn-circle btn-icon-only btn-default"}}
                        <i class="icon-eye "></i>
                        {{/link-to}}
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                        <i class="icon-wrench"></i>
                        </a>
                        <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                        <i class="icon-trash"></i>
                        </a>
                     </div>
                  </td>
               </tr>
               {{/each}}
            </tbody>
         </table>
      </div>
   </div>
</div>
{{!-- START Student Table --}}